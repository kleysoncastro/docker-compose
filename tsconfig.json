{
  "compilerOptions": {
    "target": "ES2017",          
    "module": "commonjs",        
    "resolveJsonModule": true,  
    "allowJs": true,                                                    
    "sourceMap": true,                              
    "outDir": "./dist/",
    "rootDir": "./",                             
    "esModuleInterop": true,                         
    "allowUnusedLabels": true,                      
    "allowUnreachableCode": true,                   
    "skipLibCheck": true                             
  },
  "include": [
    "src/"
  ],
  
  "exclude": [
    "node_modules",
    ".npm"
  ]
}
